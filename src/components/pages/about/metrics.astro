---
import { Image } from "astro:assets";
import metrics_bg from "@assets/about-us/metrics.jpg";
---

<section class="metrics">
    <Image class="metrics__img" src={metrics_bg} alt="metrics" />

    <div class="metrics__col">
        <p class="metrics__col__subtitle">
            Skilled Professionals, Superior Care
        </p>
        <h1 class="metrics__col__title">
            Expertise You Can Trust for Your Health and Well-Being
        </h1>

        <div class="metrics__col__stack">
            <div class="metrics__col__box">
                <div class="metrics__col__box__group">
                    <h4>Medical Diagnosis Accuracy</h4>
                    <h4>98%</h4>
                </div>
                <div class="metrics__col__box__progress" />
            </div>
            <div class="metrics__col__box">
                <div class="metrics__col__box__group">
                    <h4>Emergency Response Efficiency</h4>
                    <h4>95%</h4>
                </div>
                <div class="metrics__col__box__progress" />
            </div>
            <div class="metrics__col__box">
                <div class="metrics__col__box__group">
                    <h4>Technological Advancement</h4>
                    <h4>90%</h4>
                </div>
                <div class="metrics__col__box__progress" />
            </div>
        </div>

        <a class="metrics__col__btn" href="/">
            Explore our Expertise
        </a>
    </div>
</section>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    .metrics{
        padding: 8rem 12rem;
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 2rem;
        background-color: $gray-color;

        &__img{
            width: 30rem;
            height: 35rem;
        }

        &__col{
            display: flex;
            flex-direction: column;
            gap: 2rem;
            width: min(32rem, 100%);

            &__subtitle{
                font-size: 0.9rem;
                font-weight: 500;
                font-style: italic;
                color: $secondary-color;
            }

            &__title{
                font-size: 2.8rem;
                font-weight: 500;
                line-height: 2ch;
            }

            &__stack{
                display: flex;
                flex-direction: column;
                gap: 1.5rem;
                margin-top: 1.5rem;
            }

            &__box{
                display: flex;
                flex-direction: column;
                gap: 0.5rem;

                &__group{
                    display: flex;
                    justify-content: space-between;

                    >h4{
                        font-weight: 500;
                        font-size: 1.1rem;
                    }
                }

                &__progress{
                    width: 100%;
                    height: 1rem;
                    position: relative;
                    background-color: $secondary-color;

                    &:before{
                        content: "";
                        position: absolute;
                        width: 10%;
                        height: 100%;
                        right: 0;
                        background-color: $white-color;
                    }
                }
            }

            &__btn{
                align-self: baseline;
                width: 14rem;
                height: 3rem;
                background-color: $primary-color;
                color: $white-color;
                border: 1px solid transparent;
                font-size: 0.8rem;
                font-weight: 400;
                letter-spacing: 0.1ch;
                display: flex;
                justify-content: center;
                align-items: center;

                &:hover{
                    background-color: $secondary-color;
                    cursor: pointer;
                    transition: all .2s ease;
                }
            }
        }
    }
</style>