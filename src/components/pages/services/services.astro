---
import { Image } from "astro:assets";

import service_01 from "@assets/service-1.jpg";
import service_02 from "@assets/service-2.jpg";
import service_03 from "@assets/service-3.jpg";
import service_04 from "@assets/service-4.jpg";
import service_05 from "@assets/service-5.jpg";
import service_06 from "@assets/service-6.jpg";
---

<section class="services">
    <div class="services__ctx">
        <p class="services__ctx__subtitle">
            Our Services
        </p>
        <h1 class="services__ctx__title">
            Providing Expert Medical Care for a Healthier You
        </h1>
    </div>

    <div class="services__grid">
        <div class="services__grid__col">
            <Image src={service_01} alt="service-1" />
            <div class="services__grid__col__badge">
                <span>General Consultation</span>
            </div>
        </div>
        <div class="services__grid__col">
            <Image src={service_02} alt="service-2" />
            <div class="services__grid__col__badge">
                <span>Emergency Care</span>
            </div>
        </div>
        <div class="services__grid__col">
            <Image src={service_03} alt="service-3" />
            <div class="services__grid__col__badge">
                <span>Diagnostic & Laboratory</span>
            </div>
        </div>
        <div class="services__grid__col">
            <Image src={service_04} alt="service-4" />
            <div class="services__grid__col__badge">
                <span>Specialist Care</span>
            </div>
        </div>
        <div class="services__grid__col">
            <Image src={service_05} alt="service-5" />
            <div class="services__grid__col__badge">
                <span>Telemedicine Services</span>
            </div>
        </div>
        <div class="services__grid__col">
            <Image src={service_06} alt="service-6" />
            <div class="services__grid__col__badge">
                <span>Wellness & Preventive Care</span>
            </div>
        </div>
    </div>
</section>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    .services{
        padding: 8rem 12rem;
        background-color: $gray-color;
        display: flex;
        flex-direction: column;
        gap: 2rem;

        &__ctx{
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            align-items: center;

            &__subtitle{
                font-size: 0.9rem;
                font-weight: 500;
                font-style: italic;
                color: $secondary-color;
            }

            &__title{
                font-size: 3rem;
                font-weight: 500;
                line-height: 2ch;
                text-align: center;
                width: min(45rem, 100%);
            }
        }

        &__grid{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            column-gap: 2rem;
            row-gap: 4rem;
            margin-top: 4rem;

            &__col{
                position: relative;
                
                img{
                    width: 100%;
                    height: 25rem;
                }

                &__badge{
                    position: absolute;
                    top: -1.8rem;
                    left: 50%;
                    transform: translateX(-50%);
                    z-index: 1;
                    background-color: $white-color;
                    padding: 0.8rem;
                    width: 80%;
                    text-align: center;
                    font-weight: 500;
                    border: 1px solid $gray-color-1;
                }
            }
        }
    }
</style>