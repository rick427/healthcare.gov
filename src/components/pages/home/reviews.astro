---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

import review_01 from "@assets/review-1.jpg";
import review_02 from "@assets/review-2.jpg";
import review_03 from "@assets/review-3.jpg";
---

<section class="reviews">
    <p class="reviews__subtitle">Trusted by Thousands</p>
    <h1 class="reviews__title">
        Hear from Those Who Trust Us with Their Health
    </h1>

    <div class="reviews__grid">
        <div class="reviews__grid__card">
            <h4 class="reviews__grid__card__title">
                Highly Recommended
            </h4>
            <div class="reviews__grid__card__ratings">
                {[...Array(5).keys()].map((_, _idx) => (
                    <Icon name="bi:star-fill" size="16" />
                ))}
            </div>
            <p class="reviews__grid__card__text">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                Tenetur sint a omnis recusandae dolorem voluptas!
            </p>
            <div class="reviews__grid__card__divider" />
            <div class="reviews__grid__card__user">
                <h5>Rake Mahendra</h5>
                <h6> Tech Lead</h6>
            </div>

            <Image class="reviews__grid__card__avatar" width={100} height={100} src={review_01}  alt="user-1" />
        </div>

        <div class="reviews__grid__card">
            <h4 class="reviews__grid__card__title">
                Excellent Service
            </h4>
            <div class="reviews__grid__card__ratings">
                {[...Array(5).keys()].map((_, _idx) => (
                    <Icon name="bi:star-fill" size="16" />
                ))}
            </div>
            <p class="reviews__grid__card__text">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                Tenetur sint a omnis recusandae dolorem voluptas!
            </p>
            <div class="reviews__grid__card__divider" />
            <div class="reviews__grid__card__user">
                <h5>Nadia Kusumo</h5>
                <h6> Financial Analyst</h6>
            </div>

            <Image class="reviews__grid__card__avatar" width={100} height={100} src={review_02}  alt="user-2" />
        </div>

        <div class="reviews__grid__card">
            <h4 class="reviews__grid__card__title">
                Professional & Kind
            </h4>
            <div class="reviews__grid__card__ratings">
                {[...Array(5).keys()].map((_, _idx) => (
                    <Icon name="bi:star-fill" size="16" />
                ))}
            </div>
            <p class="reviews__grid__card__text">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                Tenetur sint a omnis recusandae dolorem voluptas!
            </p>
            <div class="reviews__grid__card__divider" />
            <div class="reviews__grid__card__user">
                <h5>Damar Nugroho</h5>
                <h6>Lecturer</h6>
            </div>

            <Image class="reviews__grid__card__avatar" width={100} height={100} src={review_03}  alt="user-3" />
        </div>
    </div>
</section>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    [data-icon]{
        color: $orange-color;
    }

    .reviews{
        padding: 8rem 12rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;

        &__subtitle{
            font-size: 0.9rem;
            font-weight: 500;
            font-style: italic;
            color: $secondary-color;
            text-align: center;
        }

        &__title{
            font-size: 3rem;
            font-weight: 500;
            line-height: 2ch;
            width: min(45rem, 100%);
            text-align: center;
            margin: 0 auto;
        }

        &__grid{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 4rem;

            &__card{
                background-color: $gray-color;
                padding: 2rem;
                display: flex;
                flex-direction: column;
                gap: 1rem;
                justify-content: center;
                align-items: center;
                position: relative;

                &__avatar{
                    position: absolute;
                    top: -3rem;
                    border-radius: 50%;
                    border: 6px solid $gray-color-1;
                    //filter: grayscale(1);
                }

                &__ratings{
                    display: flex;
                    align-items: center;
                    gap: 0.3rem;
                }

                &__title{
                    font-size: 1.3rem;
                    font-weight: 500;
                    padding-top: 3rem;
                }

                &__text{
                    font-size: 0.8rem;
                    text-align: center;
                }

                &__divider{
                    width: 100%;
                    height: 0.05rem;
                    background-color: $gray-color-1;
                    margin: 1rem 0;
                }

                &__user{
                    display: flex;
                    flex-direction: column;
                    gap: 0.5rem;
                    justify-content: center;
                    align-items: center;
                    
                    >h5{
                        font-size: 1rem;
                        font-weight: 500;
                    }

                    > h6{
                        font-size: 0.8rem;
                        font-weight: 600;
                        font-style: italic;
                        color: $secondary-color;
                    }
                }
            }
        }
    }
</style>