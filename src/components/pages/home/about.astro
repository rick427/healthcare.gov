---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

import about_01 from "@assets/about-01.jpg";
import about_02 from "@assets/about-02.jpg";
---

<section class="about">
    <div class="about__row">
        <div class="about__box">
            <Image src={about_01} alt="about-1" />
            <p>
                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quas sint, 
                unde assumenda hic officia beatae minima quam doloribus. Officiis 
                reprehenderit magnam nulla culpa, nisi id veritatis deserunt rem 
                expedita tempora.
            </p>
        </div>
        <div class="about__box">
            <Image src={about_02} alt="about-2" />

            <div class="about__col">
                <h4 class="about__col__subtitle">About Us</h4>
                <h1 class="about__col__title">Caring for You, Every Step of the Way</h1>
                <a class="about__col__btn">Learn More About Us</a>
            </div>
        </div>
    </div>

    <div class="about__box">
        <h1 class="about__title">Dedicated to Your Well-Being</h1>

        <div class="about__divider" />

        <div class="about__grid">
            <div class="about__grid__col">
                <div class="about__grid__col__icon">
                    <Icon name="bi:heart-fill" size="22" />
                </div>
                <h4 class="about__grid__col__title">
                    Providing Accessible Healthcare for All
                </h4>
                <p class="about__grid__col__text">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
                    Delectus quas, assumenda veniam debitis emit
                </p>
            </div>
            <div class="about__grid__col">
                <div class="about__grid__col__icon">
                    <Icon name="bi:check-circle-fill" size="22" />
                </div>
                <h4 class="about__grid__col__title">
                    Ensuring High Quality Medical Standards for All
                </h4>
                <p class="about__grid__col__text">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
                    Delectus quas, assumenda veniam debitis emit
                </p>
            </div>
            <div class="about__grid__col">
                <div class="about__grid__col__icon">
                    <Icon name="bi:book-fill" size="22" />
                </div>
                <h4 class="about__grid__col__title">
                    Empowering Patients with Health Education
                </h4>
                <p class="about__grid__col__text">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
                    Delectus quas, assumenda veniam debitis emit
                </p>
            </div>
        </div>
    </div>
</section>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    [data-icon]{
        color: $secondary-color;
    }

    .about{
        padding: 8rem 12rem;
        display: flex;
        flex-direction: column;
        gap: 6rem;

        &__row{
            display: flex;
            gap: 1.5rem;
        }

        &__box{
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            
            &:first-child{
                width: 40rem;

                > img{
                    height: 25rem;
                    object-fit: cover;
                }
            }
            &:last-child{
                flex: 1;
                > img{
                    width: 100%;
                    height: 15rem;
                    object-fit: cover;
                }
            }
        }

        &__col{
            display: flex;
            flex-direction: column;
            gap: 1.5rem;

            &__subtitle{
                font-size: 0.9rem;
                font-weight: 500;
                font-style: italic;
                color: $secondary-color;
            }

            &__title{
                font-size: 2.8rem;
                font-weight: 500;
                line-height: 2ch;
            }

            &__btn{
                width: 14rem;
                height: 3rem;
                background-color: $primary-color;
                color: $white-color;
                border: 1px solid transparent;
                font-size: 0.8rem;
                font-weight: 400;
                letter-spacing: 0.1ch;
                display: flex;
                justify-content: center;
                align-items: center;

                &:hover{
                    background-color: $secondary-color;
                    cursor: pointer;
                    transition: all .2s ease;
                }
            }
        }

        &__title{
            font-size: 2rem;
            font-weight: 500;
        }

        &__divider{
            width: 100%;
            height: 0.05rem;
            background-color: $gray-color-1;
        }

        &__grid{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2rem;

            &__col{
                display: flex;
                flex-direction: column;
                gap: 1rem;

                &__icon{
                    width: 5rem;
                    height: 5rem;
                    border-radius: 50%;
                    background-color: $gray-color-1;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                &__title{
                    font-size: 1.5rem;
                    font-weight: 500;
                    line-height: 2.5ch;
                }

                &__text{
                    font-size: 0.9rem;
                    opacity: 0.7;
                }
            }
        }
    }
</style>