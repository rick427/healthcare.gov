---
import { Icon } from 'astro-icon/components';
---

<section class="cta">
    <div class="cta__ctx">
        <p class="cta__ctx__subtitle">Your Health Matters to Us</p>
        <h1 class="cta__ctx__title">Get Expert Medical Support Whenever You Need It</h1>
        <a class="cta__ctx__btn">Book an Appointment</a>
    </div>

    <div class="cta__card">
        <ul class="cta__card__list">
            <li>
                <Icon name="bi:check-circle-fill" size="18" />
                Experience Medical Team
            </li>
            <li>
                <Icon name="bi:check-circle-fill" size="18" />
                Affordable & Transparent Pricing
            </li>
            <li>
                <Icon name="bi:check-circle-fill" size="18" />
                Convenient Appointments
            </li>
        </ul>
    </div>
</section>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    [data-icon]{
        color: $secondary-color;
    }

    .cta{
        padding: 8rem 12rem;
        min-height: 55vh;
        background: linear-gradient(rgba(255,255,255, 0.6), rgba(255,255,255,0.3)), url(@/assets/cta-bg.jpg) no-repeat center center / cover;
        display: flex;
        align-items: center;
        gap: 4rem;

        &__ctx{
            width: min(40rem, 100%);
            display: flex;
            flex-direction: column;
            gap: 1.5rem;

            &__subtitle{
                font-size: 0.9rem;
                font-weight: 500;
                font-style: italic;
                color: $secondary-color;
            }

            &__title{
                font-size: 3rem;
                font-weight: 500;
                line-height: 2ch;
            }

            &__btn{
                width: 14rem;
                height: 3rem;
                background-color: $primary-color;
                color: $white-color;
                border: 1px solid transparent;
                font-size: 0.8rem;
                font-weight: 400;
                letter-spacing: 0.1ch;
                display: flex;
                justify-content: center;
                align-items: center;

                &:hover{
                    background-color: $secondary-color;
                    cursor: pointer;
                    transition: all .2s ease;
                }
            }
        }

        &__card{
            width: min(25rem, 100%);
            padding: 2rem;
            background: $white-color;

            &__list{
                display: flex;
                flex-direction: column;
                gap: 1rem;

                > li{
                    display: flex;
                    align-items: center;
                    gap: 1rem;
                }
            }
        }
    }
</style>