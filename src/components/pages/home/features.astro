import f_03 from "@assets/features/f-3.png";
import f_04 from "@assets/features/f-4.png";
import f_bg from "@assets/features/f-bg.jpg";
---

<section class="usp">
    <div class="usp__col">
        <Image class="usp__col__img" src={f_bg} alt="f-bg" />

        <article class="usp__col__box">
