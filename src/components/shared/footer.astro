---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import logo from "@assets/logo.png";
---

<footer class="footer">
    <div class="footer__group">
        <div class="footer__col">
            <a href="/">
                <Image class="footer__col__logo" src={logo} alt="logo" />
            </a>
            <div class="footer__col__group">
                <Icon name="bi:telephone-fill" size="18" /> 
                <p>+1 (800) 123-4567</p>
            </div>
            <div class="footer__col__group">
                <Icon name="bi:envelope-fill" size="18" /> 
                <p>support@healthcare.gov</p>
            </div>
    
            <div class="footer__col__socials">
                <div class="footer__col__socials__icon">
                    <Icon name="bi:facebook" size="18" /> 
                </div>
                <div class="footer__col__socials__icon">
                    <Icon name="bi:twitter-x" size="18" /> 
                </div>
                <div class="footer__col__socials__icon">
                    <Icon name="bi:linkedin" size="18" /> 
                </div>
                <div class="footer__col__socials__icon">
                    <Icon name="bi:instagram" size="18" /> 
                </div>
            </div>
        </div>
    
        <div class="footer__row">
            <div class="footer__row__box">
                <h4>Explore</h4>
                <ul>
                    <li>Home</li>
                    <li>About Us</li>
                    <li>Services</li>
                    <li>Appointment</li>
                    <li>Blog</li>
                </ul>
            </div>
            <div class="footer__row__box">
                <h4>Support</h4>
                <ul>
                    <li>FAQs</li>
                    <li>Help Center</li>
                    <li>Doctors & Services</li>
                    <li>Location</li>
                    <li>Contact Support</li>
                </ul>
            </div>
            <div class="footer__row__box">
                <h4>Legal</h4>
                <ul>
                    <li>Privacy Policy</li>
                    <li>Terms & Conditions</li>
                    <li>Accessibility Statement</li>
                    <li>Cookie Policy</li>
                    <li>Disclaimer</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="footer__copy">
        <div class="footer__copy__col">
            <p>Copyright &copy; 2025 Healthcare.gov</p>
            <p>Designed by Richard et al. (2025)</p>
        </div>
        <div class="footer__copy__col">
            <p>Terms of Use</p>
            <p>Privacy Policy</p>
        </div>
    </div>
</footer>

<style lang="scss" scoped>
    @use "@/styles/variables" as *;

    [data-icon]{
        color: $white-color;
    }

    .footer{
        padding: 6rem 12rem;
        background-color: $black-color;
        display: flex;
        flex-direction: column;
        gap: 4rem;

        &__group{
            display: flex;
            align-items: center;
        }

        &__col{
            flex: 1;
            color: $white-color;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;

            &__logo{
                width: 12rem;
                height: 3rem;
                object-fit: cover;
                filter: invert(1) brightness(2);
                //background-color: darken($gray-color, 4%); 
            }

            &__group{
                display: flex;
                align-items: center;
                gap: 1rem;

                > p{
                    font-size: 0.9rem;
                }
            }

            &__socials{
                display: flex;
                align-items: center;
                gap: 1rem;

                &__icon{
                    width: 2rem;
                    height: 2rem;
                    border-radius: 50%;
                    background-color: $secondary-color;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
            }
        }

        &__row{
            display: flex;
            align-items: center;
            gap: 4rem;

            &__box{
                color: $white-color;
                display: flex;
                flex-direction: column;
                gap: 1.5rem;

                >h4{
                    font-size: 1.3rem;
                    font-weight: 500;
                }

                > ul{
                    display: flex;
                    flex-direction: column;
                    gap: 0.5rem;

                    > li{
                        font-size: 0.8rem;
                        font-weight: 400;
                    }
                }
            }
        }

        &__copy{
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: $white-color;
            border-top: 1px solid $gray-color;
            padding-top: 2rem;

            &__col{
                display: flex;
                align-items: center;
                gap: 1rem;
                font-size: 0.8rem;
            }
        }
    }
</style>